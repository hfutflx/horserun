<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!--<include resource="logback-lib.xml" />-->

    <!--<springProperty scope="context" name="appName" source="spring.application.name" defaultValue="JeviceService"/>-->
    <!--<springProperty scope="context" name="rootLogLevel" source="logging.level.root" defaultValue="INFO"/>-->
    <property name="log_base" value="${LOG_PATH}"/>

    <!--解决集成调用链文件名乱码问题-->
    <property name="appName" value="jevic-core"/>
    <property name="rootLogLevel" value="ERROR"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%logger{56}) - %msg%n</pattern>
        </encoder>
    </appender>
    <!--<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">-->
        <!--<layout class="cn.cycore.chain.log.TraceIdPatternLayout">-->
            <!--<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%logger{56}) - %traceId - %msg%n</pattern>-->
        <!--</layout>-->
    <!--</appender>-->

    <appender name="COMMON_APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log_base}/${appName}-common.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${log_base}/history/%d{yyyy-MM-dd}/${appName}-common-%i.log
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <!-- or whenever the file size reaches 10MB -->
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{56} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="METHOD_APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log_base}/${appName}-method.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${log_base}/history/%d{yyyy-MM-dd}/${appName}-method-%i.log
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <!-- or whenever the file size reaches 10MB -->
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>10</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{56} - %msg%n</pattern>
        </encoder>
    </appender>


    <root level="${rootLogLevel}">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="COMMON_APPENDER"/>
    </root>

    <logger name="com.iflytek.jevic.core.aop.LogAspect" level="INFO" additivity="false">
        <!--<appender-ref ref="FLUME_LOG" />-->
        <appender-ref ref="METHOD_APPENDER" />
    </logger>
</configuration>

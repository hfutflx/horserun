<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.horserun.user.dao.mysql.LoginMapper" >

    <select id="login" resultType="java.lang.String">
        SELECT password FROM guser WHERE phoNum=#{loginName} OR loginName=#{loginName}
    </select>

    <select id="getUserByPho" resultType="Guser">
        SELECT * from guser where phoNum=#{loginName} limit 1
    </select>

</mapper>